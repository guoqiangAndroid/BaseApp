<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yang.baseapp">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.USE_SIP" />

    <application
        android:name=".base.BaseApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".FirstActivity"
            android:theme="@style/AppSplash"
            android:taskAffinity=".taskOne">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FirstActivity2"
            android:theme="@style/AppSplash"
            android:exported="true"
            android:label="first2"
            android:taskAffinity=".taskTwo">
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".MenuActivity" />
        <activity android:name=".BaseTestActivity" />
        <activity android:name=".TestWebViewActivity" />
        <activity android:name="com.yang.study.BroadCastActivity"/>
        <activity android:name="com.yang.study.LevelMenuActivity" />
        <activity android:name="com.yang.study.ServiceActivity" />
        <activity android:name="com.yang.study.ServiceNextActivity" />
        <!-- exported 是否被其他应用隐式调用 默认更具service中有无intent-filter -->
        <!-- permission 权限声明 -->
        <!-- process ":remote" 单独进程 -->
        <!-- isolatedProcess 会在一个特殊的进程运行，只能通过start和bind通行 -->
        <service
            android:name="com.yang.study.ServiceAbout"
            android:enabled="true"
            android:exported="true"
            android:isolatedProcess="false" />
    </application>

</manifest>