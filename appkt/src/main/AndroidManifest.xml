<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yang.appkt">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 是否可以使用蓝牙 -->
    <uses-permission android:name="android.permission.BLUETOOTH" /> <!-- 蓝牙扫描 -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- 低功耗蓝牙required=true/false ==>只能在支持低功耗蓝牙设备安装/自行判断是否支持低功耗 -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BaseTheme"
        tools:targetApi="n">

        <activity
            android:name=".VmActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".menu.base.NdkActivity" />
        <activity android:name=".menu.base.BluetoothActivity" />
        <activity android:name=".menu.base.ServiceActivity" />
        <activity android:name=".menu.base.JavaMemoryActivity" />
        <activity android:name=".menu.base.ActivityActivity" />
        <activity android:name=".menu.VmActivity" />
        <activity android:name=".menu.base.LifecycleActivity" />
        <activity android:name=".menu.base.LaunchActivity" />
        <activity android:name=".menu.base.HandlerActivity" />
        <activity android:name=".menu.base.WebViewActivity" />
        <activity android:name=".menu.base.RoomActivity" />
        <activity android:name=".menu.base.RecyclerActivity" />
        <activity android:name=".menu.base.CoroutinesActivity" />
        <activity android:name=".menu.base.AndroidMenuActivity" />

        <service
            android:name=".service.BindService"
            android:enabled="false"
            android:exported="true" />
        <service
            android:name=".service.StartService"
            android:enabled="false"
            android:exported="true" />
    </application>

</manifest>