    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sc_bg"
    android:orientation="horizontal"
    tools:context=".menu.WaterMarkActivity">

    <TableLayout
        android:id="@+id/tl_tab"
        android:layout_width="match_parent"
        android:rotation="90"
        android:background="@color/base_color_066EFA"
