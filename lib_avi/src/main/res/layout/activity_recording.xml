<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.avi.menu.mediaRecorder.MediaRecorderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/itemText"/>
        <TextView
            android:id="@+id/tv_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_getPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ButtonBg.blue10"
            android:text="获取权限"/>

        <TextView
            android:id="@+id/tv_start1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ButtonBg.blue10"
            android:text="MediaRecorder开始"/>

        <TextView
            android:id="@+id/tv_end1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ButtonBg.blue10"
            android:text="MediaRecorder结束"/>

    </LinearLayout>
</ScrollView>